{% extends 'theme/base_front.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}

    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <section class="register-section">

        <div class="container">
        
            <h1 class="register-section-text">Connexion</h1>
    
            <div class="col">
                <div class="register-section-form">
    
                    <form action="" method="post" class="ms-5">
                        <div class="mb-3 d-flex">
                            <div class="w-25">
                                <label for="inputEmail">Email</label>
                            </div>
                            <div class="w-25">
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            </div>
                        </div>
                        <div class="mb-3 d-flex">
                            <div class="w-25">   
                                <label for="inputPassword">Password</label>
                            </div>
                            <div class="w-25">
                                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            </div>
                        </div> 
                        <div class="mb-3 d-flex">
                            <div class="w-25 mb-3">  
                                <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                         >
                                <label>
                                    <input type="checkbox" name="_remember_me">  Se souvenir de moi
                                </label>
                            </div>
                        </div>
                        <div class="mb-3 d-flex">
                            <button class="btn btn-lg btn-primary" type="submit"  formnovalidate>
                                Se connecter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

   

       
   

    
</form>
{% endblock %}
